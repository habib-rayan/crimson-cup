{%- assign s = section.settings -%}
<section class="section single-products-section bg-{{ s.color_scheme }}">
    <div class="container">
        <div class="single-products-wrapper">
            <div class="single-products-items">
                <div class="single-products-item">
                    <div class="single-product-slider">
                        <div class="swiper single-product-swiper-2">
                            <div class="swiper-wrapper">
                                {% for media in product.media %}
                                    <div class="swiper-slide">
                                        <img src="{{ media.image |  image_url: width:2000  }}" alt="product-slider-img-1.png" />
                                    </div>    
                                {% endfor %}
                            </div>
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                        <div thumbsSlider="" class="swiper single-product-swiper">
                            <div class="swiper-wrapper">
                                {% for media in product.media %}
                                    <div class="swiper-slide">
                                        <img src="{{ media.image |  image_url: width:2000  }}" alt="product-slider-img-1.png" />
                                    </div>    
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="single-product-accordion wow animate__animated animate__fadeInUp" data-wow-duration="1s"
                        data-wow-delay=".4s">
                        <div class="single-product-accordion-items">
                            {%- render 'additional-info', product: product -%}
                        </div>
                    </div>
                </div>
                <div class="single-products-item">
                    <div class="choose-single-product-purchase-wrapper">
                    {% for block in section.blocks %}
                        {%- case block.type -%}
                            {%- when 'heading' -%}
                                <div class="single-product-name-heading wow animate__animated animate__fadeInUp" data-wow-duration="1s"
                                    data-wow-delay=".1s">
                                    <h3 class="single-product-heading-text"> {{ product.title }} </h3>
                                </div>
                            {%- when 'review' -%}
                                {%- render 'review', product: product -%}
                            {%- when 'short_description' -%}
                                {%- render 'short-description', product: product -%}
                            {%- when 'variants' -%}
                                {%- render 'variants', product: product -%}
                            {%- when 'price' -%}
                                {%- render 'product-price', product: product -%}
                            {%- when 'button' -%}
                                {%- render 'product-form', product: product, block:block -%}
                            {%- when 'payment_icon' -%}
                                {%- render 'payment-icon', product: product, block:block -%}
                            {%- when 'speciality' -%}
                                {%- render 'speciality', product: product, block:block -%}
                            {%- endcase -%}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Single Product",
    "settings": [
        {
            "type": "header",
            "content": "Color"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color Scheme",
            "default" : "scheme-1"
        }
    ],
   "blocks": [
        {
          "type": "@app"
        },
        {
          "type": "review",
          "name":"Review",
          "limit": 1
        },
        {
          "type": "heading",
          "name":"Heading",
          "limit": 1
        },
        {
          "type": "short_description",
          "name":"Short Description",
          "limit": 1
        },
        
        {
          "type": "variants",
          "name":"Variants",
          "limit": 1,
          "settings": [
              {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "2. Purchase Type"
              }
          ]
        },
        {
          "type": "price",
          "name":"Price",
          "limit": 1
        },
        {
          "type": "button",
          "name":"Button",
          "limit": 1,
          "settings": [
            {
              "type": "text",
              "id": "button",
              "label": "Button",
              "default": "ADD TO CART"
            }
          ]
        },
        {
          "type": "payment_icon",
          "name":"Payment Icon",
          "limit": 1,
          "settings": [
              {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "SECURE & TRUSTED CHECKOUT WITH"
              }
          ]
        },
        {
          "type": "speciality",
          "name":"Speciality",
          "limit": 1,
          "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default" : "Why Ethiopia Coffee ?"
            }
          ]
        }
      ],
    "presets": [
      {
        "name": "Single Product",
        "settings": {
        }
      }
    ]
  }
{% endschema %}